<h2> I am the page <%= page %>, I am the number of articles allowed
     <%= CONFIG[:articles_per_page]%>. </br>
     There are <%= articles.number_of_pages(CONFIG[:articles_per_page]) %> number of pages.
</h2>

<h2>
  <% articles.number_of_pages(CONFIG[:articles_per_page]).times do |i| %>
    <A HREF="/?page=<%= i+1 %>"> <%= i+1 %> </A>
  <% end %>
</h2>

<% articles.pagination(page, CONFIG[:articles_per_page]).each do |article| %>
  <article>
    <h2>
      <A HREF="article/<%= article.title %>"> <%= article.title %> </A>
      <%= article.time_created %>
    </h2>
    <!-- Need to limit the text of this to a fixed number of characters -->
    <p> <%= article.body %> </p>
  </article>
<% end %>